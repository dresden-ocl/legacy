<plugin>


  <extension
    point = "org.eclipse.ui.newWizards">
    <wizard
      id = "tudresden.ocl20.pivot.xocl.editor.xoclWizard"
      name = "%_UI_XOCLModelWizard_label"
      class = "tudresden.ocl20.pivot.xocl.presentation.XOCLModelWizard"
      category = "tudresden.ocl20.newWizards.category"
      icon = "icons/full/obj16/XOCLModelFile.gif">
      <description>%_UI_XOCLModelWizard_description</description>
      <selection class = "org.eclipse.core.resources.IResource" />
    </wizard>
  </extension>

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "tudresden.ocl20.pivot.xocl.xoclEditor"
        name = "%_UI_XOCLEditor_label"
        icon = "icons/full/obj16/XOCLModelFile.gif"
        extensions = "xocl"
        class = "tudresden.ocl20.pivot.xocl.presentation.XOCLEditor" 
        contributorClass="tudresden.ocl20.pivot.xocl.presentation.XOCLActionBarContributor" >
    </editor>
  </extension>    
</plugin>
