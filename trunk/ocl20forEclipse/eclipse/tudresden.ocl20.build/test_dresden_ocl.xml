<project default="test" name="Tests for Dresden OCL">

	<import file="./build_dresden_ocl.xml" />

	<!-- ================================= 
          target: test              
         ================================= -->
	<target name="test" depends="Build Dresden OCL..build" description="Runs the Dresden OCL Test Suite">
		<buckminster command="junit" workspace="${workspacePath}">
			<cmdargs>
				<arg value="-l" />
				<arg value="org.dresdenocl.testsuite/DresdenOCLTestSuite.launch" />
				<arg value="-o" />
				<arg value="${testResultsPath}/output/test-results.xml" />
				<arg value="--stdout" />
				<arg value="${testResultsPath}/output/stdout.txt" />
				<arg value="--stderr" />
				<arg value="${testResultsPath}/output/stderr.txt" />
				<arg value="--flatXML" />
			</cmdargs>
		</buckminster>
	</target>


</project>